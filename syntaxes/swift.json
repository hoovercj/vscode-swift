{
  "fileTypes": [
    "swift"
  ],
  "name": "Swift",
  "patterns": [
    {
      "include": "#expression"
    }
  ],
  "repository": {
    "comment": {
      "name": "comment.swift",
      "patterns": [
        { "include": "#comment-block-doc" },
        { "include": "#comment-block" },
        { "include": "#comment-line-doc" },
        { "include": "#comment-line" }
      ]
    },
    "comment-block": {
      "begin": "/\\*",
      "end": "\\*/",
      "name": "comment.block.swift"
    },
    "comment-block-doc": {
      "begin": "/\\*\\*(?!/)",
      "end": "\\*/",
      "name": "comment.block.documentation.swift"
    },
    "comment-line": {
      "match": "(//).*$\\n?",
      "name": "comment.line.swift"
    },
    "comment-line-doc": {
      "match": "(///).*$\\n?",
      "name": "comment.line.documentation.swift"
    },
    "decl-block": {
      "begin": "\\{",
      "beginCaptures": {
        "0": { "name": "meta.brace.curly.swift" }
      },
      "end": "\\}",
      "endCaptures": {
        "0": { "name": "meta.brace.curly.swift" }
      },
      "name": "meta.decl.block.ts",
      "patterns": [
        { "include": "#expression" }
      ]
    },
    "declaration": {
      "name": "meta.declaration.swift",
      "patterns": [
        { "include": "#function-declaration" }
      ]
    },
    "expression": {
      "name": "meta.expression.swift",
      "patterns": [
        { "include": "#comment" },
        { "include": "#declaration" }
      ]
    },
    "function-declaration": {
      "begin": "\\b(func)\\b(?:\\s+([a-zA-Z_$][\\w$]*))?\\s*",
      "beginCaptures": {
        "1": {
          "name": "storage.type.function.swift"
        },
        "2": {
          "name": "entity.name.function.swift"
        }
      },
      "end": "(?=;|\\})|(?<=\\})",
      "name": "meta.function.swift",
      "patterns": [
        { "include": "#comment" },
        { "include": "#function-parameters" },
        { "include": "#decl-block" }
      ]
    },
    "function-parameter-assignment": {
      "match": "\\s*(=)\\s*",
      "captures": {
        "1": { "name": "keyword.operator.swift" }
      }
    },
    "function-parameter-ellipses": {
      "match": "\\s*(\\.\\.\\.)\\s*",
      "captures": {
        "1": { "name": "keyword.operator.swift" }
      }
    },
    "function-parameter-modifier": {
      "captures": { "0": { "name": "keyword.other.swift" } },
      "match": "\\s*\\b(let|var|inout|ref)"
    },
    "function-parameter-external-name": {
      "captures": {
        "1": {
          "name": "keyword.operator.swift"
        },
        "2": {
          "name": "variable.parameter.swift"
        },
        "3": {
          "name": "keyword.operator.swift"
        }
      },
      "match": "\\s*(#|_|[a-zA-Z_$][\\w$]*\\s)\\s*([a-zA-Z_$][\\w$]*)\\s*(:)",
      "name": "parameter.name.swift"
    },
    "function-parameter-internal-name": {
      "captures": {
        "1": {
          "name": "variable.parameter.swift"
        },
        "2": {
          "name": "keyword.operator.swift"
        }
      },
      "match": "\\s*([a-zA-Z_$][\\w$]*)\\s*(:)",
      "name": "parameter.name.swift"
    },
    "function-parameters": {
      "begin": "\\(",
      "beginCaptures": {
        "0": {
          "name": "meta.brace.round.swift"
        }
      },
      "end": "\\)",
      "endCaptures": {
        "0": {
          "name": "meta.brace.round.swift"
        }
      },
      "name": "meta.function-parameters.swift",
      "patterns": [
        { "include": "#comment" },
        { "include": "#function-parameter-modifier" },
        { "include": "#function-parameter-external-name" },
        { "include": "#function-parameter-internal-name" },
        { "include": "#function-parameter-assignment" },
        { "include": "#function-parameter-ellipses" }
      ]
    }
  },
  "scopeName": "source.swift"
}